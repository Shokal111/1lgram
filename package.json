{
    "name": "nexus-chat",
    "version": "1.0.0",
    "description": "A futuristic cyberpunk-themed real-time messenger",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:client": "npm run dev --workspace=nexus-chat-client",
        "dev:server": "npm run dev --workspace=nexus-chat-server",
        "build": "npm run build --workspaces",
        "build:client": "npm run build --workspace=nexus-chat-client",
        "build:server": "npm run build --workspace=nexus-chat-server",
        "start": "npm start --workspace=nexus-chat-server",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}