{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "../node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "src/declarations.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}